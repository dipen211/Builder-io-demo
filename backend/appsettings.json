{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "Name": "Billing Management API",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001"
    ]
  },
  "BillingSettings": {
    "DefaultTaxRate": 0.1,
    "InvoiceNumberPrefix": "INV",
    "DefaultCurrency": "USD",
    "MaxInvoiceItems": 100,
    "InvoiceExpirationDays": 30
  },
  "PaginationSettings": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  }
}
